{
  "name": "@init-kz/goods",
  "version": "0.0.12",
  "description": "Library from init.kz",
  "homepage": "https://init.kz/en",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/init-pkg/init-goods.git"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base/index.js",
      "require": "./dist/base/index.cjs"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.cjs"
    },
    "./next": {
      "types": "./dist/next/index.d.ts",
      "import": "./dist/next/index.js",
      "require": "./dist/next/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write .",
    "build:watch": "tsup --watch",
    "serve": "http-server -p 8080",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "release": "release-it",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "keywords": [
    "INIT.KZ"
  ],
  "author": "INIT.KZ",
  "license": "MIT",
  "maintainers": [
    {
      "name": "Sauyrbai Imangali",
      "url": "https://github.com/Imangali-Sauyrbay"
    },
    {
      "name": "Vadim S.",
      "url": "https://github.com/init-vadim"
    }
  ],
  "devDependencies": {
    "@types/node": "^22.13.5",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.5",
    "jsdom": "^26.1.0",
    "next": "^15.3.2",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "release-it": "^19.0.2",
    "tsup": "^8.4.0",
    "typescript": "^5.7.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7",
    "zod": "^3.24.4"
  },
  "publishConfig": {
    "access": "public"
  },
  "directories": {
    "test": "tests"
  },
  "bugs": {
    "url": "https://github.com/init-pkg/init-goods/issues"
  },
  "peerDependencies": {
    "next": ">=15.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "zod": ">=3.20.0"
  }
}
